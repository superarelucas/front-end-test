extends includes/template.pug

include includes/mixins.pug

block content

    nav.menu-mobile
        a.item(href='#') Home
        a.item(href='#') Feature
        a.item(href='#') Reviews
        a.item(href='#') Download

    header.header
        nav.main-navbar.container

            .hamburger-menu
                .icon
                    .line
                .label Menu

            img.logo(src='images/logo.svg', alt='Logo Fun Weather')
            
            ul.main-menu
                +menuItem('#', 'Home')
                +menuItem('#', 'Feature')
                +menuItem('#', 'Reviews')
                +menuItem('#', 'Download')

            .social-icons
                +socialItem('#', 'fa-facebook')
                +socialItem('#', 'fa-instagram')
                +socialItem('#', 'fa-twitter')

        .hero.container
            .row.align-items-center
                .col-md-6.col-lg-5
                    h1.hero-title Get the most fun weather app
                    p.hero-text Simple, nice and user-friendly application of the weather. Only useful information
                    a.btn(href='#') Download
                    a.btn.-blue(href='#') Features
                .col-md-6.col-lg-7
                    .smartphone-wrapper.bubbles-wrapper
                        img.smartphone(src='images/phone-white.png')
                        .bubble-group
                            .weather-bubble.-orange Sunny
                            .weather-bubble.-white 9ยบ
                            .weather-bubble.-blue-dark London
                            .weather-bubble.-yellow Rio
                    //- +smartphoneImage('images/screen-cloudy.png', '-light')
        
        a.btn-chevron(href='#features')

        .header-bottom
    
    section#features.section.features
        .container
            h4.section-title Perfect features
            p.section-subtitle Only necessery

            .row
                .col-md-4
                    +featureItem('images/features-usability.png', 'Usability ', 'Sometimes the simplest things are the hardest to find. So we created a new line for everyday life')
                .col-md-4
                    +featureItem('images/features-parallax.png', 'Parallax Effect', 'Sometimes the simplest things are the hardest to find. So we created a new line for everyday life')
                .col-md-4
                    +featureItem('images/features-colors.png', 'Unlimites Colors', 'Sometimes the simplest things are the hardest to find. So we created a new line for everyday life')

    section.section.widgets
        .container
            h4.section-title Simple widgets
            p.section-subtitle Drag and Drop

            .slider-wrapper
                .slider-image
                    .item
                        img(src='images/slider-image-1.png')
                    .item.active
                        img(src='images/slider-image-2.png')
                    .item
                        img(src='images/slider-image-3.png')

                .controls
                    button.control.control-left.fa.fa-angle-left(data-control='prev')
                    button.control.control-right.fa.fa-angle-right(data-control='next')

    section.section.screenshots
    section#reviews.section.reviews
    section#download.section.download
    footer.footer